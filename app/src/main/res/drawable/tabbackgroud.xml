<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 连框颜色值 -->
    <item
        android:top="20dp"
        android:bottom="20dp"
        android:left="40dp"
        android:right="40dp">
        <shape>
            <solid android:color="#6600541a" />

            <corners
                android:bottomLeftRadius="25dp"
                android:bottomRightRadius="25dp"
                android:topLeftRadius="25dp"
                android:topRightRadius="25dp" />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item
        android:bottom="20dp"
        android:left="10dp"
        android:right="10dp"
        android:top="20dp">
        <shape>
            <solid android:color="#6600541a" />

            <padding
                android:bottom="0dp"
                android:left="10dp"
                android:right="10dp"
                android:top="0dp" />

            <corners
                android:radius="5dp" /> <!-- 设置圆角半径 -->

        </shape>
    </item>

</layer-list>