<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.example.yuefan.view.CustomView.CircleImage
        android:id="@+id/message_righttext_touxiang"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/icon"
        app:KuangWidth="1dp"/>

    <android.support.v7.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#bae2be"
        android:layout_marginLeft="100dp"
       android:layout_toLeftOf="@id/message_righttext_touxiang"
        >
<TextView
    android:id="@+id/message_righttext"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textSize="20sp"
    android:layout_margin="10dp"
    />
    </android.support.v7.widget.CardView>
</RelativeLayout>