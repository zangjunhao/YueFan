<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackgroud"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="24dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#ccffffff"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            >

            <TextView
                android:id="@+id/zhiliao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:text="个人简介修改"
                android:textSize="15sp"/>

                <EditText
                    android:id="@+id/change_jianjie"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="20dp"
                    android:textSize="15sp"
                    android:maxLines="4"
                    android:gravity="top"
                    android:hint="个人简介"
                    />


            <TextView
                android:id="@+id/zhiliao1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffffff"
                android:text="个人爱好修改"
                android:textSize="15sp"
                android:layout_below="@id/change_jianjie"/>
            <EditText
                android:id="@+id/change_aihao"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:textSize="15sp"
                android:maxLines="4"
                android:gravity="top"
                android:hint="个人爱好"
                android:layout_below="@id/zhiliao1"
                />
            <Button
                android:id="@+id/change_button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="修改资料"
                android:background="#22000000"
                android:layout_below="@id/change_aihao"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>