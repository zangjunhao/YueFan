<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yuefan.view.activity.YueFanActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/xiangqing_tbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:background="#fff9fa9b"
        app:navigationIcon="@drawable/left_black_24dp"
        />

    <RelativeLayout
        android:id="@+id/xiangqing_toubu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/xiangqing_tbar">
        <com.example.yuefan.view.CustomView.CircleImage
            android:id="@+id/xiangqing_touxiang"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/icon"
            app1:KuangColor="#00ffffff"
            android:layout_margin="20dp"
            android:transitionName="yuefan"
            app1:KuangWidth="0dp"
            />

        <TextView
            android:id="@+id/xiangqing_usename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="风吹稻花香"
            android:textSize="16sp"
            android:textColor="#e8630a"
            android:transitionName="name"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/xiangqing_touxiang"
            />

        <TextView
            android:id="@+id/xiangqing_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5小时前"
            android:layout_toRightOf="@+id/xiangqing_touxiang"
            android:layout_marginTop="15dp"/>
        <TextView
            android:id="@+id/xiangqing_juli"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200米"
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            />
        <TextView
            android:id="@+id/xiangqing_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看地图"
            android:layout_below="@id/xiangqing_juli"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:textSize="18sp"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/xiangqing_toubu">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:background="#ffffffff">
            <TextView
                android:id="@+id/xiangqing_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="19sp"
                android:textColor="#ff000000"
                android:layout_margin="20dp"
               />
            <TextView
                android:id="@+id/xiangqing_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/xiangqing_title"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"
                />
            <ImageView
                android:id="@+id/xiangqing_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_below="@id/xiangqing_content"/>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
