<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackgroud"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="50dp"
    app:cardCornerRadius="10dp"
   app:cardBackgroundColor="#0fffffff"
    android:layout_centerInParent="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
       >
    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_zhanghao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <android.support.design.widget.TextInputEditText
        android:id="@+id/login_zhang"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:maxEms="15"
        android:hint="账号"
        />
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:id="@+id/login_mima"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_zhanghao">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/login_mi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="15sp"
            android:hint="密码"/>
    </android.support.design.widget.TextInputLayout>
        <com.unstoppable.submitbuttonview.SubmitButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            app:buttonText="登    陆"
            app:buttonTextSize="15sp"
            app:buttonColor="#aa87e0ff"
            android:transitionName="button"
            android:layout_below="@id/login_mima"/>
        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/login_button">
            <TextView
                android:id="@+id/login_niming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:text="匿名登陆     "
                />
            <TextView
                android:id="@+id/login_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#fff6da"
                android:transitionName="zhuche"
                android:text="注册"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
</RelativeLayout>