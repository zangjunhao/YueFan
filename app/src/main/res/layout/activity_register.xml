<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginbackgroud"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#ccffffff"
        android:layout_centerInParent="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            >
            <TextView
                android:id="@+id/register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:transitionName="zhuche"
                android:textColor="#ff000000"
                android:layout_centerHorizontal="true"
                android:textSize="25sp"/>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/register_zhanghao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/register_zhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:hint="注册账号"
                    />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/register_mima"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_zhanghao">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/register_mi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:textSize="15sp"
                    android:hint="注册密码"/>
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
            android:id="@+id/register_mima_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_mima">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/register_mi_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textSize="15sp"
                android:hint="确认密码"/>
        </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/register_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/register_mima_2">
                <android.support.design.widget.TextInputEditText
                    android:id="@+id/register_email_"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:hint="邮箱地址"/>
            </android.support.design.widget.TextInputLayout>
            <com.unstoppable.submitbuttonview.SubmitButton
                android:id="@+id/register_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                app:buttonText="注    册"
                app:buttonTextSize="15sp"
                app:buttonColor="#aa87e0ff"
                android:transitionName="button"
                android:layout_below="@id/register_email"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>